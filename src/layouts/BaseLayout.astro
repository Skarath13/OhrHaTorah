---
import InlineEditor from '../components/admin/InlineEditor.astro';
import LoginModal from '../components/admin/LoginModal.astro';
import UnderConstructionModal from '../components/layout/UnderConstructionModal.astro';

interface Props {
  title?: string;
}
const { title = "Ohr HaTorah Messianic Congregation" } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">

    <!-- Open Graph Meta Tags for Social Media -->
    <meta property="og:title" content="Ohr HaTorah Messianic Congregation">
    <meta property="og:description" content="A Messianic Jewish congregation in Allen, Texas, where Jews and Gentiles worship Yeshua (Jesus) together while celebrating Jewish heritage and traditions.">
    <meta property="og:image" content="https://images.unsplash.com/photo-1578662996442-48f60103fc96?w=1200&h=630&fit=crop&crop=center">
    <meta property="og:image:width" content="1200">
    <meta property="og:image:height" content="630">
    <meta property="og:url" content="https://ohrhatorah.org">
    <meta property="og:type" content="website">
    <meta property="og:site_name" content="Ohr HaTorah Messianic Congregation">

    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="Ohr HaTorah Messianic Congregation">
    <meta name="twitter:description" content="A Messianic Jewish congregation in Allen, Texas, where Jews and Gentiles worship Yeshua (Jesus) together while celebrating Jewish heritage and traditions.">
    <meta name="twitter:image" content="https://images.unsplash.com/photo-1578662996442-48f60103fc96?w=1200&h=630&fit=crop&crop=center">

    <!-- Additional Meta Tags -->
    <meta name="description" content="Ohr HaTorah Messianic Congregation in Allen, Texas - A place where Jews and Gentiles worship Yeshua (Jesus) together while celebrating Jewish heritage and traditions.">
    <meta name="keywords" content="Messianic Judaism, Jewish congregation, Yeshua, Jesus, Allen Texas, synagogue, Torah, Hebrew calendar, Jewish holidays">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <!-- Stylesheets -->
    <link rel="stylesheet" href="/styles/style.css">
    <link rel="stylesheet" href="/styles/mobile-only.css">
</head>
<body>
    <slot />
    <InlineEditor />
    <LoginModal />
    <UnderConstructionModal />
</body>
</html>
